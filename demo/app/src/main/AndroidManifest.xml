<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="la.xiong.tv">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.splash.SplashActivity"
            android:theme="@style/ThemeSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.main.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.activity.main.PlayListActicity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ui.activity.frame.FrameActivity" />
        <activity
            android:name=".ui.activity.play.PlayActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:process=":vitamio"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.play.PlayerActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.main.VideoCategoryListActivity1"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.main.VideoCategoryListActivity2"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.main.VideoCategoryListActivity3"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.main.VideoListActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.main.VideoWebViewActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.main.RegisterActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:screenOrientation="portrait" />
    </application>

</manifest>